<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad36"
        android:scaleType="centerCrop"
        android:src="@drawable/nanos" />

    <TextView
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/three"
        android:paddingBottom="@dimen/pad8"
        android:paddingLeft="@dimen/pad64"
        android:paddingTop="@dimen/pad8"
        android:text="@string/name"
        android:textColor="@color/col1"
        android:textSize="@dimen/text24" />

    <ImageView
        android:id="@+id/loph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:paddingBottom="@dimen/pad0"
        android:paddingLeft="@dimen/pad24"
        android:paddingTop="@dimen/pad24"
        android:scaleType="center"
        android:src="@drawable/locs"
        android:textSize="@dimen/text24" />

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/pad8"
        android:paddingLeft="@dimen/pad64"
        android:paddingTop="@dimen/pad8"
        android:text="@string/address"
        android:textColor="@color/col1"
        android:textSize="@dimen/text24" />

    <ImageView
        android:id="@+id/phph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/two"
        android:paddingBottom="@dimen/pad0"
        android:paddingLeft="@dimen/pad24"
        android:paddingTop="@dimen/pad12"
        android:scaleType="center"
        android:src="@drawable/phos" />

    <TextView
        android:id="@+id/thr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/two"
        android:autoLink="phone"
        android:paddingBottom="@dimen/pad8"
        android:paddingLeft="@dimen/pad64"
        android:paddingTop="@dimen/pad8"
        android:text="@string/phoneno"
        android:textColor="@color/col1"
        android:textSize="@dimen/text24" />
    <ImageView
        android:id="@+id/weph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thr"
        android:paddingBottom="@dimen/pad0"
        android:paddingLeft="@dimen/pad24"
        android:paddingTop="@dimen/pad12"
        android:scaleType="center"
        android:src="@drawable/webs" />

    <TextView
        android:id="@+id/th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thr"
        android:autoLink="web"
        android:paddingBottom="@dimen/pad8"
        android:paddingLeft="@dimen/pad64"
        android:paddingTop="@dimen/pad8"
        android:text="@string/website"
        android:textColor="@color/col1"
        android:textSize="@dimen/text24" />


</RelativeLayout>
